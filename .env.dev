# Development Environment Configuration

# Docker
DOCKERFILE=Dockerfile
CONTAINER_PREFIX=notes-dev
API_PORT=8080
DB_EXTERNAL_PORT=5433
ADMINER_PORT=8081
RESTART_POLICY=unless-stopped
HEALTH_START_PERIOD=30s

# Image versions
POSTGRES_VERSION=15
ADMINER_VERSION=latest
REDIS_VERSION=7

# Database Configuration
DB_DRIVER=postgresql
DB_HOST=postgres
DB_PORT=5432
DB_NAME=notesdb_dev
DB_USERNAME=notes_user
DB_PASSWORD=notes_password
DB_DRIVER_CLASS=org.postgresql.Driver

# JPA/Hibernate Configuration
JPA_DATABASE_PLATFORM=org.hibernate.dialect.PostgreSQLDialect
JPA_DDL_AUTO=none # Flyway
JPA_SHOW_SQL=true
JPA_FORMAT_SQL=true

# SQL Initialization
SQL_INIT_MODE=never
JPA_DEFER_DATASOURCE_INIT=true

# JWT Configuration - Development (use weak secret for dev)
JWT_SECRET=YWJjZGVmZ2hpamtsbW5vcHFyc3R1dnd4eXowMTIzNDU2Nzg5YWJjZGVmZ2hpamtsbW5vcHFyc3R1dnd4eXowMTIzNDU2Nzg5
JWT_EXPIRATION=86400000

# Logging Configuration - Verbose for development
LOGGING_LEVEL_SECURITY=DEBUG
LOGGING_LEVEL_APP=DEBUG
LOGGING_LEVEL_SQL=DEBUG
LOGGING_LEVEL_SQL_BIND=TRACE
LOGGING_LEVEL_ROOT=INFO

# Server Configuration - Show errors in development
SERVER_ERROR_STACKTRACE=always
SERVER_ERROR_MESSAGE=always

# Actuator Configuration - Full access in development
ACTUATOR_ENDPOINTS=health,info,env,metrics,loggers
ACTUATOR_HEALTH_DETAILS=always

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0
REDIS_TIMEOUT=2000ms
