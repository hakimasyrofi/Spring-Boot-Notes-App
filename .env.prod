# Production Environment Configuration

# Docker
DOCKERFILE=Dockerfile.prod
CONTAINER_PREFIX=java-spring-notes-prod
API_PORT=8080
DB_EXTERNAL_PORT=5433
ADMINER_PORT=8081
RESTART_POLICY=unless-stopped
HEALTH_START_PERIOD=60s

# Image versions
POSTGRES_VERSION=15
ADMINER_VERSION=latest
REDIS_VERSION=7

# Database Configuration
DB_DRIVER=postgresql
DB_HOST=CHANGE_ME_PRODUCTION_DB_HOST
DB_PORT=5432
DB_NAME=CHANGE_ME_PRODUCTION_DB_NAME
DB_USERNAME=CHANGE_ME_PRODUCTION_DB_USER
DB_PASSWORD=CHANGE_ME_PRODUCTION_DB_PASSWORD
DB_DRIVER_CLASS=org.postgresql.Driver

# JPA/Hibernate Configuration
JPA_DATABASE_PLATFORM=org.hibernate.dialect.PostgreSQLDialect
JPA_DDL_AUTO=none # Setting for Flyway
JPA_SHOW_SQL=false
JPA_FORMAT_SQL=false

# SQL Initialization (Setting for Flyway)
SQL_INIT_MODE=never
JPA_DEFER_DATASOURCE_INIT=false

# JWT Configuration
JWT_SECRET=YWJjZGVmZ2hpamtsbW5vcHFyc3R1dnd4eXowMTIzNDU2Nzg5YWJjZGVmZ2hpamtsbW5vcHFyc3R1dnd4eXowMTIzNDU2Nzg5
JWT_EXPIRATION=86400000

# Logging Configuration - Minimal logging for production
LOGGING_LEVEL_SECURITY=WARN
LOGGING_LEVEL_APP=INFO
LOGGING_LEVEL_SQL=WARN
LOGGING_LEVEL_SQL_BIND=WARN
LOGGING_LEVEL_ROOT=WARN

# Server Configuration - Hide errors in production
SERVER_ERROR_STACKTRACE=never
SERVER_ERROR_MESSAGE=never

# Actuator Configuration - Minimal endpoints for production
ACTUATOR_ENDPOINTS=health
ACTUATOR_HEALTH_DETAILS=never

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0
REDIS_TIMEOUT=2000ms